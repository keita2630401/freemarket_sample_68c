.wrapper
  %main.content
    .header__logo
      %a
      = link_to image_tag("/logo.png", alt: "フリマ""出品ページ"),"#"

  .item__information
    %h2.single-head 商品情報を入力
    = form_with model: @item, local: true do |form|
      -# .exhibition
      -#   .exhibition__image
      -#     .exhibition__image__style
      -#       %label 出品画像
      -#       %span 必須
      -#     %p 最大10枚までアップロードできます。
          -# .image_upload
          -#   = form.fields_for :images do |image|
          -#     = image.label :image do
          -#       .js-file_group{data: {index: image.index}}
          -#         = image.file_field :image, class: "js-file"



      #image-box
        #previews
          - if @item.persisted?
            - @item.images.each_with_index do |image, i|
              = image_tag image.image.url, data: { index: i }, width: "100", height: '100'
        = form.fields_for :images do |image|
          .js-file_group{data: {index: image.index}}
            = image.file_field :image, class: 'js-file'


            %br/
            %span.js-remove 削除
          - if @item.persisted?
            = image.check_box :_destroy, data:{ index: image.index }, class: 'hidden-destroy'
        - if @item.persisted?
          .js-file_group{data: {index: @item.images.count}}
            = file_field_tag :image, name: "item[images_attributes][#{@item.images.count}][image]", class: 'js-file'
            .js-remove 削除






      .item__description
        .item__description__name
          %label 商品名
          %span 必須
          = form.text_field :name, placeholder: "商品名（必須 40文字まで)"
        .item__description__form
          .item__description__small
            %label 商品の説明
            %span 必須
            = find_and_preserve(form.text_area :description, placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。")
      .item__details
        %p 商品詳細
        .category
          .category__small
            %label カテゴリー
            %span 必須
          %textarea.area
        .brand
          %label ブランド
          %span 任意
        %textarea.area
        .status
          .status__small
            %label 商品の状態
            %span 必須
            = form.collection_select :condition_id, Condition.all, :id, :name, prompt: "選択してください"
      .delivery
        %p 配送について
        .delibery__charge
          .delibery__charge__small
            %label 発送料の負担
            %span 必須
            = form.collection_select :shipping_cost_side_id, ShippingCostSide.all, :id, :name, prompt: "選択してください"
        .delibery__origin
          .delibery__origin__small
            %label 発送元の地域
            %span 必須
            = form.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "選択してください"
        .delibery__days
          %label 発送までの日数
          %span 必須
          = form.collection_select :shipping_days_id, ShippingDays.all, :id, :name, prompt: "選択してください"
      .price
        %p 価格（¥300〜9,999,999)
        .price__selling
          .price__selling__form
            .price__selling__form2
              %label 販売価格
              %span 必須
            .money
              .money__en ¥
              = form.number_field :price, placeholder: "0"
          .sales
            .sales__commission 販売手数料(10%)
            .profit 販売利益

      .confirm
        = form.submit "出品する", class: 'btn'
        %a.btn-default もどる












  %footer.footer__logo
    %nav
      %ul.var
        %li
          %a
            = link_to 'プライバシーポリシー', '＃'
        %li
          %a
            = link_to 'フリマ利用規約', '＃'
        %li
          %a
            = link_to '特定商取引に関する表記', '＃'
    %a
      = link_to image_tag("/logo-white.png", alt: "フリマ"),"#"
    %p
      %small © Furima, Inc.
