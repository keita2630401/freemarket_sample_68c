.wrapper
  %main.content
    .header__logo
      %a
      = link_to image_tag("/logo.png", alt: "フリマ""出品ページ"),root_path

    .item__information
      %h2.single-head 商品情報を入力
    .exhibition
      .exhibition__image
        .exhibition__image__style
          %label 出品画像
          %span 必須
        %p 最大10枚までアップロードできます。
        .image_upload
          = form_with model: @item, local: true do |form|
            = form.fields_for :images do |image|
              = image.label :image do
                .js-file_group{data: {index: image.index}}
                  = image.file_field :image, class: "js-file"
                  %br
                  ドラッグアンドドロップ
                  またはクリックしてファイルをアップロード
    .item__description
      .item__description__name
        %label 商品名
        %span 必須
        = form_with model: @item, local: true do |form|
          = form.text_field :name, placeholder: "商品名（必須 40文字まで)"
      .item__description__form
        .item__description__small
          %label 商品の説明
          %span 必須
          = form_with model: @item, local: true do |form|
            = find_and_preserve(form.text_area :description, placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。")
    .item__details
      %p 商品詳細
      .category
        .category__small
          %label カテゴリー
          %span 必須
        %textarea.area
      .brand
        %label ブランド
        %span 任意
      %textarea.area
      .status
        .status__small
          %label 商品の状態
          %span 必須
        = form_with model: @item, local: true do |form|
          = form.collection_select :condition_id, Condition.all, :id, :name, prompt: "選択してください"
    .delivery
      %p 配送について
      .delibery__charge
        .delibery__charge__small
          %label 発送料の負担
          %span 必須
        = form_with model: @item, local: true do |form|
          = form.collection_select :ShippingCostSide_id, ShippingCostSide.all, :id, :name, prompt: "選択してください"
      .delibery__origin
        .delibery__origin__small
          %label 発送元の地域
          %span 必須
        = form_with model: @item, local: true do |form|
          = form.collection_select :OriginArea_id, Prefecture.all, :id, :name, prompt: "選択してください"
      .delibery__days
        %label 発送までの日数
        %span 必須
        = form_with model: @item, local: true do |form|
          = form.collection_select :ShippingDays_id, ShippingDays.all, :id, :name, prompt: "選択してください"
    .price
      %p 価格（¥300〜9,999,999)
      .price__selling
        .price__selling__form
          .price__selling__form2
            %label 販売価格
            %span 必須
          .money
            .money__en ¥
            = form_with model: @item, local: true do |form|
              = form.number_field :price, placeholder: "0"
        .sales
          .sales__commission 販売手数料(10%)
          .profit 販売利益

    .confirm
      = submit_tag "出品する", class: 'btn'
      %a.btn-default もどる
  %footer.footer__logo
    %nav
      %ul.var
        %li
          %a
            = link_to 'プライバシーポリシー', '＃'
        %li
          %a
            = link_to 'フリマ利用規約', '＃'
        %li
          %a
            = link_to '特定商取引に関する表記', '＃'
    %a
      = link_to image_tag("/logo-white.png", alt: "フリマ"),root_path
    %p
      %small © Furima, Inc.