.footer
  .footer__box
    .footer__box__contents
      .footer__box__contents__subTitle
        %h3.subTitle だれでもかんたん、人生を変えるフリマアプリ
      .footer__box__contents__title
        %h2.title 今すぐ無料ダウンロード！
      .footer__box__contents__downloadLink
        = link_to root_path do
          = image_tag "/google-play-badge.png", alt: "googlePlayリンク", class: "googleImg"
        = link_to root_path do
          = image_tag "/App_Store_Badge.png", alt: "appleStoreリンク", class: "appleImg"
  %ul.footer__contents
    %li.footer__contents__box
      %h2.footer__contents__box__title FURIMAについて
      %ul.footer__contents__box__list
        %li
          = link_to "会社概要（運営会社）", root_path
        %li
          = link_to "プライバシーポリシー", root_path
        %li
          = link_to "FURIMA利用規約", root_path
        %li
          = link_to "ポイントに関する特約", root_path
    %li.footer__contents__box
      %h2.title FURIMAをみる
      %ul.footer__contents__box__list
        %li
          = link_to "カテゴリー一覧", root_path
        %li
          = link_to "ブランド一覧", root_path
    %li.footer__contents__box
      %h2.title ヘルプ&ガイド
      %ul.footer__contents__box__list
        %li
          = link_to "FURIMAガイド", root_path
        %li
          = link_to "FURIMAロゴ利用ガイドライン", root_path
        %li
          = link_to "お知らせ", root_path
  .footer__logo
    = link_to root_path do
      = image_tag "/logo-white.png", alt: "ロゴ", class: "logoImg"
  .footer__copyright
    %p.copyright © FURIMA
  .footer__buyBtn
    = link_to new_item_path do
      %span 出品する
      = image_tag "/icon_camera.png", alt: "買う", class: "buyBtnImg"
